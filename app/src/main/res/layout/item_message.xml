<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_status_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_newsread_black_120px" />

        <TextView
            android:id="@+id/tv_time_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="2017/08/02 12:02:03"
            android:textColor="@color/base_black" />

        <TextView
            android:id="@+id/tv_location_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_item_message"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="设备名称：海伦堡1单元401"
            android:textColor="@color/base_black" />

        <TextView
            android:id="@+id/tv_type_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_location_item_message"
            android:layout_margin="10dp"
            android:text="设备名称：海伦堡1单元401"
            android:textColor="@color/base_black" />
    </RelativeLayout>

</android.support.v7.widget.CardView>