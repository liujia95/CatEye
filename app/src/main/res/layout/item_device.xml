<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_item_device"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_location_item_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="现代花园1单元501"
            android:textColor="@color/base_black" />

        <TextView
            android:id="@+id/tv_online_item_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_eye_brown_60px"
            android:text="设备在线"
            android:textColor="@color/base_black" />

        <ImageView
            android:id="@+id/iv_video_item_device"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/tv_location_item_device"
            android:background="@color/orange" />


        <ImageView
            android:id="@+id/iv_setup_item_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_video_item_device"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_setup_black_90px" />

        <ImageView
            android:id="@+id/iv_key_item_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_video_item_device"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/iv_setup_item_device"
            android:src="@drawable/ic_key_black_90px" />
    </RelativeLayout>
</android.support.v7.widget.CardView>