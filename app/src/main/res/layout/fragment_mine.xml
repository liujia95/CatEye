<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_fragment_mine"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/base_color"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/base_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_bg" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_minehead_brond_225px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="123 1231 2313"
                            android:textColor="@color/base_color"
                            android:textSize="15sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_change_password"
                style="@style/MineItemLayoutStyle">

                <TextView
                    style="@style/MineSettingsNameStyle"
                    android:drawableLeft="@drawable/ic_minechangepassword_black_54px"
                    android:text="修改密码" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_back_black_90px" />
            </LinearLayout>

            <View style="@style/MineLineStyle" />

            <LinearLayout
                android:id="@+id/ll_share"
                style="@style/MineItemLayoutStyle">

                <TextView
                    style="@style/MineSettingsNameStyle"
                    android:drawableLeft="@drawable/ic_mineshare_black_54px"
                    android:text="分享推荐" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_back_black_90px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey_bg" />

            <LinearLayout
                android:id="@+id/ll_repair"
                style="@style/MineItemLayoutStyle">

                <TextView
                    style="@style/MineSettingsNameStyle"
                    android:drawableLeft="@drawable/ic_minerepair_black_54px"
                    android:text="我要报修" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_back_black_90px" />
            </LinearLayout>

            <View style="@style/MineLineStyle" />

            <LinearLayout
                android:id="@+id/ll_into_shore"
                style="@style/MineItemLayoutStyle">

                <TextView
                    style="@style/MineSettingsNameStyle"
                    android:drawableLeft="@drawable/ic_mineshore_black_54px"
                    android:text="进入商城" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_back_black_90px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey_bg" />

            <LinearLayout
                android:id="@+id/ll_about_me"
                style="@style/MineItemLayoutStyle">

                <TextView
                    style="@style/MineSettingsNameStyle"
                    android:drawableLeft="@drawable/ic_mineabout_black_54px"
                    android:text="关于我们" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_back_black_90px" />
            </LinearLayout>

            <View style="@style/MineLineStyle" />

            <LinearLayout
                android:id="@+id/ll_setout"
                style="@style/MineItemLayoutStyle">

                <TextView
                    style="@style/MineSettingsNameStyle"
                    android:drawableLeft="@drawable/ic_minesetout_black_54px"
                    android:text="注销登录" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_back_black_90px" />
            </LinearLayout>

            <View style="@style/MineLineStyle" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>